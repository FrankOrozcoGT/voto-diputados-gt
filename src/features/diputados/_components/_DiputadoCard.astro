---
import type { DiputadoDTO } from '../../../core/diputados/application/dtos/DiputadoDTO';
import { formatNumeroLista, tieneFoto, getIniciales } from './_DiputadoCard';

interface Props {
  diputado: DiputadoDTO;
}

const { diputado } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-200 relative hover:-translate-y-1">
  <div class="absolute top-2 right-2 bg-gray-100 text-gray-700 text-xs font-bold py-1 px-2 rounded-full">
    {formatNumeroLista(diputado.numeroLista)}
  </div>
  
  <div class="p-4 flex items-center space-x-4">
    <div class="w-16 h-16 rounded-full overflow-hidden bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
      {tieneFoto(diputado) ? (
        <img 
          src={diputado.fotoUrl} 
          alt={diputado.nombreCompleto}
          class="w-full h-full object-cover"
        />
      ) : (
        <span>{getIniciales(diputado)}</span>
      )}
    </div>
    
    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-gray-900 mb-1 truncate">
        {diputado.nombreCompleto}
      </h3>
      <div class="flex items-center gap-2 mb-1">
        <span 
          class="text-xs font-bold px-2 py-0.5 rounded text-white"
          style={`background-color: ${diputado.partido.color}`}
        >
          {diputado.partido.prefijo}
        </span>
        <span class="text-sm font-medium text-gray-700">
          {diputado.partido.nombre}
        </span>
      </div>
      <p class="text-sm text-gray-500 truncate">
        {diputado.ubicacion}
      </p>
      {diputado.cargoBloque && (
        <p class="text-xs text-gray-400 mt-1">
          {diputado.cargoBloque}
        </p>
      )}
    </div>
  </div>
</div>
