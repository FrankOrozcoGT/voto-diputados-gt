---
import type { PartidoDTO } from '../../../core/partidos/application/dtos/PartidoDTO';
import { getPartidoUrl, getGradientClasses, formatCantidadDiputados } from './_PartidoCard';

interface Props {
  partido: PartidoDTO;
}

const { partido } = Astro.props;
---

<a 
  href={getPartidoUrl(partido)}
  class={`block ${getGradientClasses(partido)} rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 p-8 text-white hover:scale-105 relative overflow-hidden`}
>
  {partido.logoUrl && (
    <div class="absolute top-4 right-4 w-16 h-16 bg-white rounded-full p-2 opacity-90">
      <img src={partido.logoUrl} alt={`Logo ${partido.prefijo}`} class="w-full h-full object-contain" />
    </div>
  )}
  
  <div class="mb-2">
    <span class="text-sm font-semibold bg-white/20 px-3 py-1 rounded-full">{partido.prefijo}</span>
  </div>
  
  <h3 class="text-2xl font-bold mb-2 pr-20">{partido.nombre}</h3>
  <p class="text-lg opacity-90">
    {formatCantidadDiputados(partido.totalDiputados)}
  </p>
</a>
