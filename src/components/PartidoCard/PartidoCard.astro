---
import type { PartidoCardProps } from './PartidoCard.types';

interface Props extends PartidoCardProps {}
const { partido } = Astro.props;
---

<a 
  href={`/partidos/${partido.slug}`}
  class={`block bg-gradient-to-r ${partido.colorGradient} rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 p-8 text-white hover:scale-105`}
>
  <h3 class="text-2xl font-bold mb-2">{partido.nombre}</h3>
  <p class="text-lg opacity-90">
    {partido.totalDiputados} {partido.totalDiputados === 1 ? 'diputado' : 'diputados'}
  </p>
</a>
