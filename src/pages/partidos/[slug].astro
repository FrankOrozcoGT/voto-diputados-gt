---
import AuthenticatedLayout from '@/layouts/AuthenticatedLayout.astro';
import DiputadoCard from '@/features/diputados/_components/_DiputadoCard.astro';
import { useDiputadosPorPartido } from '@/features/diputados/_hooks/_useDiputados';
import { usePartidos } from '@/features/partidos/_hooks/_usePartidos';

export async function getStaticPaths() {
  const { partidos } = await usePartidos();

  return partidos.map(partido => ({
    params: { slug: partido.slug },
    props: { partido }
  }));
}

const { slug } = Astro.params;
const { partido } = Astro.props;

const { diputados } = await useDiputadosPorPartido(slug);
let error: string | null = null;
---

<AuthenticatedLayout title={partido.nombre}>
    <main class="container mx-auto px-4 py-8 max-w-7xl">
      <header class="mb-12">
        <div class="mb-6">
          <a href="/partidos" class="inline-flex items-center text-blue-600 hover:text-blue-700">
            <span class="text-xl">‚Üê</span>
            <span class="ml-2">Volver a partidos</span>
          </a>
        </div>
        <div 
          class="rounded-2xl shadow-xl p-8 text-white relative overflow-hidden"
          style={partido.colorGradient}
        >
          {partido.logoUrl && (
            <div class="absolute top-4 right-4 w-24 h-24 bg-white rounded-full p-3 opacity-90">
              <img src={partido.logoUrl} alt={`Logo ${partido.prefijo}`} class="w-full h-full object-contain" />
            </div>
          )}
          
          <div class="mb-2">
            <span class="text-sm font-semibold bg-white/20 px-3 py-1 rounded-full">{partido.prefijo}</span>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold mb-2 pr-28">
            {partido.nombre}
          </h1>
          <p class="text-white/90 text-lg">
            {diputados.length} {diputados.length === 1 ? 'diputado' : 'diputados'} en el Congreso
          </p>
        </div>
      </header>

      {error ? (
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
          <h2 class="text-2xl font-bold text-red-700 mb-2">Error al cargar diputados</h2>
          <p class="text-red-600">{error}</p>
        </div>
      ) : (
        <section>
          {diputados.length === 0 ? (
            <div class="bg-white rounded-lg shadow p-12 text-center">
              <div class="text-6xl mb-4">ü§∑</div>
              <h2 class="text-2xl font-bold text-gray-700 mb-2">
                No hay diputados para este partido
              </h2>
              <p class="text-gray-500 mb-6">
                No se encontraron diputados activos del partido {partido.nombre}
              </p>
              <a 
                href="/partidos" 
                class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
              >
                Ver otros partidos
              </a>
            </div>
          ) : (
            <div>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {diputados.map((d) => (
                  <DiputadoCard diputado={d} />
                ))}
              </div>
            </div>
          )}
        </section>
      )}

      <footer class="text-center mt-16 text-gray-600">
        <p>&copy; {new Date().getFullYear()} Congreso de la Rep√∫blica de Guatemala</p>
      </footer>
    </main>
</AuthenticatedLayout>
