---
import { supabase } from '../../lib/supabase';
import '../../styles/global.css';

// Obtener lista de partidos desde la tabla diputados (unicamente los partidos activos)
let partidos: { partido_politico: string; total: number }[] = [];
let error: string | null = null;

try {
  const { data, error: supabaseError } = await supabase
    .from('diputados')
    .select('partido_politico')
    .eq('activo', true);

  if (supabaseError) throw new Error(supabaseError.message);

  const mapa = new Map<string, number>();
  (data || []).forEach((row: any) => {
    const partido = row.partido_politico || 'Sin Partido';
    mapa.set(partido, (mapa.get(partido) || 0) + 1);
  });

  partidos = Array.from(mapa.entries())
    .map(([partido, total]) => ({ partido_politico: partido, total }))
    .sort((a, b) => b.total - a.total); // Ordenar por cantidad de diputados
} catch (e) {
  error = e instanceof Error ? e.message : 'Error desconocido';
}

// Colores para los partidos
const colores = [
  'from-blue-500 to-blue-600',
  'from-red-500 to-red-600',
  'from-green-500 to-green-600',
  'from-purple-500 to-purple-600',
  'from-orange-500 to-orange-600',
  'from-pink-500 to-pink-600',
  'from-indigo-500 to-indigo-600',
  'from-teal-500 to-teal-600',
];
---

