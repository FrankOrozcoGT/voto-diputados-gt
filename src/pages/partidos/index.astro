---
import { PartidosOrchestrator } from '@backend/partidos/orchestrators/partidos.orchestrator';
import PartidoCard from './_components/PartidoCard/PartidoCard.astro';
import type { PartidoDTO } from '@backend/partidos/dtos/partido.dto';
import '@/styles/global.css';

const orchestrator = new PartidosOrchestrator();
let partidos: PartidoDTO[] = [];
let error: string | null = null;

try {
  partidos = await orchestrator.obtenerListadoPartidos();
} catch (e) {
  error = e instanceof Error ? e.message : 'Error desconocido';
}
