---
import AuthenticatedLayout from '@/layouts/AuthenticatedLayout.astro';
import { getIniciativas, getIniciativaByNumero } from '@/core/iniciativas';
import { getVotacionesByIniciativa } from '@/core/votaciones';

export async function getStaticPaths() {
  const iniciativas = await getIniciativas.execute();
  
  return iniciativas.map(init => ({
    params: { numero: init.numero },
    props: { iniciativa: init }
  }));
}

const { numero } = Astro.params;
const iniciativa = await getIniciativaByNumero.execute(numero!);

if (!iniciativa) {
  return Astro.redirect('/iniciativas');
}

// Obtener votaciones asociadas a esta iniciativa
const votaciones = await getVotacionesByIniciativa.execute(numero!);

// Funci√≥n para calcular resultado
function calcularResultado(favor: number, contra: number, abstencion: number, ausentes: number) {
  const total = favor + contra + abstencion + ausentes;
  if (total === 0) return 'Sin votos';
  
  const porcentajeFavor = ((favor / (favor + contra)) * 100).toFixed(1);
  
  if (contra === 0) return 'Aprobada un√°nimemente';
  if (favor > contra) return `Aprobada (${porcentajeFavor}% a favor)`;
  if (contra > favor) return `Rechazada (${porcentajeFavor}% a favor)`;
  return 'Empate';
}
---

<AuthenticatedLayout title={`${iniciativa.titulo} - Iniciativa ${iniciativa.numero}`}>
  <main class="container mx-auto px-4 py-8 max-w-5xl">
    <!-- Header de Iniciativa -->
    <header class="mb-12">
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-2xl p-8 border border-blue-200">
        <div class="flex items-start justify-between gap-4 mb-4">
          <div>
            <span class="text-sm font-semibold bg-blue-600 text-white px-3 py-1 rounded-full">
              Iniciativa #{iniciativa.numero}
            </span>
            <p class="text-sm text-gray-600 mt-2">
              Presentada el {new Date(iniciativa.fecha).toLocaleDateString('es-GT')}
            </p>
          </div>
        </div>

        <h1 class="text-4xl font-bold text-gray-900 mb-2">
          {iniciativa.titulo}
        </h1>

        {iniciativa.tieneVotaciones && (
          <div class="mt-4 inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-800 text-sm font-medium">
            ‚úì Con votaciones registradas
          </div>
        )}
      </div>

      <!-- Descripci√≥n Original -->
      {iniciativa.descripcion && (
        <div class="mt-8 bg-white rounded-lg p-6 border border-gray-200">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Descripci√≥n del PDF</h2>
          <div class="prose prose-sm max-w-none text-gray-700 whitespace-pre-wrap">
            {iniciativa.descripcion}
          </div>
        </div>
      )}

      <!-- Descripci√≥n del An√°lisis -->
      {iniciativa.descripcionAnalisis && (
        <div class="mt-8 bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg p-6 border border-indigo-200">
          <h2 class="text-xl font-bold text-indigo-900 mb-4">üìã Resumen Anal√≠tico</h2>
          <div class="prose prose-sm max-w-none text-indigo-800 whitespace-pre-wrap">
            {iniciativa.descripcionAnalisis}
          </div>
        </div>
      )}

      <!-- An√°lisis de M√©tricas -->
      {iniciativa.libertadEconomica !== undefined && (
        <div class="mt-8 bg-white rounded-lg p-6 border border-gray-200">
          <h2 class="text-xl font-bold text-gray-900 mb-6">An√°lisis de Impacto</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Libertad Econ√≥mica -->
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-5 border border-blue-200">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-bold text-blue-900">Libertad Econ√≥mica</h3>
                <span class={`text-2xl font-bold ${
                  iniciativa.libertadEconomica > 0 ? 'text-green-600' : 
                  iniciativa.libertadEconomica < 0 ? 'text-red-600' : 
                  'text-gray-600'
                }`}>
                  {iniciativa.libertadEconomica > 0 ? '+' : ''}{iniciativa.libertadEconomica}
                </span>
              </div>
              <p class="text-sm text-blue-700">
                {iniciativa.justificacionMetricas?.libertad_economica || 'Sin justificaci√≥n'}
              </p>
              <div class="mt-3 text-xs text-blue-600">Rango: -3 a +4</div>
            </div>

            <!-- Libertad Cultural -->
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-5 border border-purple-200">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-bold text-purple-900">Libertad Cultural</h3>
                <span class={`text-2xl font-bold ${
                  iniciativa.libertadCultural > 0 ? 'text-green-600' : 
                  iniciativa.libertadCultural < 0 ? 'text-red-600' : 
                  'text-gray-600'
                }`}>
                  {iniciativa.libertadCultural > 0 ? '+' : ''}{iniciativa.libertadCultural}
                </span>
              </div>
              <p class="text-sm text-purple-700">
                {iniciativa.justificacionMetricas?.libertad_cultural || 'Sin justificaci√≥n'}
              </p>
              <div class="mt-3 text-xs text-purple-600">Rango: -2 a +4</div>
            </div>

            <!-- Alcance Social -->
            <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-5 border border-green-200">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-bold text-green-900">Alcance Social</h3>
                <span class={`text-2xl font-bold ${
                  iniciativa.alcanceSocial > 0 ? 'text-green-600' : 
                  iniciativa.alcanceSocial < 0 ? 'text-red-600' : 
                  'text-gray-600'
                }`}>
                  {iniciativa.alcanceSocial > 0 ? '+' : ''}{iniciativa.alcanceSocial}
                </span>
              </div>
              <p class="text-sm text-green-700">
                {iniciativa.justificacionMetricas?.alcance_social || 'Sin justificaci√≥n'}
              </p>
              <div class="mt-3 text-xs text-green-600">Rango: -1 a +4</div>
            </div>

            <!-- Riesgo Corrupci√≥n -->
            <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg p-5 border border-orange-200">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-bold text-orange-900">Riesgo Corrupci√≥n</h3>
                <span class={`text-2xl font-bold ${
                  iniciativa.riesgoCorrupcion > 0 ? 'text-green-600' : 
                  iniciativa.riesgoCorrupcion < 0 ? 'text-red-600' : 
                  'text-gray-600'
                }`}>
                  {iniciativa.riesgoCorrupcion > 0 ? '+' : ''}{iniciativa.riesgoCorrupcion}
                </span>
              </div>
              <p class="text-sm text-orange-700">
                {iniciativa.justificacionMetricas?.riesgo_corrupcion || 'Sin justificaci√≥n'}
              </p>
              <div class="mt-3 text-xs text-orange-600">Rango: -2 a +1</div>
            </div>
          </div>
        </div>
      )}

      <!-- Enlaces √∫tiles -->
      <div class="mt-6 flex gap-3 flex-wrap">
        {iniciativa.pdfUrl && (
          <a 
            href={iniciativa.pdfUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 rounded-lg bg-red-50 border border-red-200 text-red-700 hover:bg-red-100 transition font-medium"
          >
            üìÑ Ver PDF Original
          </a>
        )}
        {iniciativa.detalleUrl && (
          <a 
            href={iniciativa.detalleUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-50 border border-blue-200 text-blue-700 hover:bg-blue-100 transition font-medium"
          >
            üîó Ver en Congreso.gob.gt
          </a>
        )}
      </div>
    </header>

    <!-- Votaciones -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">
        Votaciones ({votaciones.length})
      </h2>

      {votaciones.length === 0 ? (
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
          <p class="text-yellow-800 font-medium">
            No hay votaciones registradas para esta iniciativa
          </p>
        </div>
      ) : (
        <div class="space-y-4">
          {votaciones.map((votacion, idx) => {
            const total = votacion.votosFavor + votacion.votosContra + votacion.votosAbstencion + votacion.votosAusentes;
            const resultado = calcularResultado(votacion.votosFavor, votacion.votosContra, votacion.votosAbstencion, votacion.votosAusentes);
            
            return (
              <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition">
                <div class="flex items-start justify-between gap-4 mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-1">
                      Votaci√≥n #{votacion.idCongreso}
                    </h3>
                    <p class="text-gray-700 mb-2">
                      {votacion.titulo}
                    </p>
                    <div class="flex gap-3 text-sm text-gray-600 flex-wrap">
                      {votacion.fechaVotacion && (
                        <span>üìÖ {new Date(votacion.fechaVotacion).toLocaleDateString('es-GT')}</span>
                      )}
                      {votacion.tipo && (
                        <span>üìã {votacion.tipo}</span>
                      )}
                    </div>
                  </div>
                  <div class="text-right">
                    <div class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${
                      votacion.votosFavor > votacion.votosContra 
                        ? 'bg-green-100 text-green-800' 
                        : 'bg-red-100 text-red-800'
                    }`}>
                      {resultado}
                    </div>
                  </div>
                </div>

                <!-- Desglose de votos -->
                <div class="bg-gray-50 rounded p-4 mt-4">
                  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center">
                      <div class="text-2xl font-bold text-green-600">
                        {votacion.votosFavor}
                      </div>
                      <p class="text-sm text-gray-600">A favor</p>
                    </div>
                    <div class="text-center">
                      <div class="text-2xl font-bold text-red-600">
                        {votacion.votosContra}
                      </div>
                      <p class="text-sm text-gray-600">En contra</p>
                    </div>
                    <div class="text-center">
                      <div class="text-2xl font-bold text-yellow-600">
                        {votacion.votosAbstencion}
                      </div>
                      <p class="text-sm text-gray-600">Abstenci√≥n</p>
                    </div>
                    <div class="text-center">
                      <div class="text-2xl font-bold text-gray-600">
                        {votacion.votosAusentes}
                      </div>
                      <p class="text-sm text-gray-600">Ausentes</p>
                    </div>
                  </div>
                </div>

                <!-- Link a detalle de votaci√≥n (futuro) -->
                <div class="mt-4 text-right">
                  <a 
                    href={`/votaciones/${votacion.idCongreso}`}
                    class="text-blue-600 hover:text-blue-800 font-medium text-sm"
                  >
                    Ver detalle de votaci√≥n ‚Üí
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      )}
    </section>

    <!-- Bot√≥n de regreso -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <a 
        href="/iniciativas"
        class="inline-flex items-center px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition"
      >
        ‚Üê Volver a iniciativas
      </a>
    </div>
  </main>
</AuthenticatedLayout>
