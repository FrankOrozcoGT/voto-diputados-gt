---
import AuthenticatedLayout from '@/layouts/AuthenticatedLayout.astro';
import { supabase } from '@/lib/supabase';

// Obtener sesiones de votaci√≥n ordenadas por fecha
const { data: sesiones, error } = await supabase
  .from('sesiones_votacion')
  .select('*')
  .order('fecha', { ascending: false })
  .limit(50);

if (error) {
  console.error('Error al cargar sesiones:', error);
}
---

<AuthenticatedLayout title="Votaciones del Congreso">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-4">
        üìä Votaciones del Congreso
      </h1>
      <p class="text-xl text-gray-600 text-center max-w-2xl mx-auto">
        Consulta las sesiones y votaciones realizadas en el Congreso de la Rep√∫blica
      </p>
    </header>

    {error && (
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-8">
        Error al cargar las sesiones: {error.message}
      </div>
    )}

    {!error && (!sesiones || sesiones.length === 0) && (
      <div class="bg-blue-50 border border-blue-200 text-blue-800 px-6 py-8 rounded-lg text-center">
        <p class="text-lg mb-2">üìã No hay sesiones de votaci√≥n registradas</p>
        <p class="text-sm">Las sesiones aparecer√°n aqu√≠ una vez que se importen los datos.</p>
      </div>
    )}

    {sesiones && sesiones.length > 0 && (
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Sesi√≥n</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Tipo</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Descripci√≥n</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Fecha</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Estado</th>
                <th class="px-6 py-4 text-right text-sm font-semibold text-gray-900">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {sesiones.map((sesion) => (
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm font-medium text-gray-900">#{sesion.numero}</span>
                    {sesion.fase && (
                      <span class="block text-xs text-gray-500">Fase {sesion.fase}</span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-blue-100 text-blue-800">
                      {sesion.tipo_sesion}
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <p class="text-sm text-gray-900 line-clamp-2">{sesion.descripcion}</p>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    {new Date(sesion.fecha).toLocaleDateString('es-GT', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    {sesion.activa ? (
                      <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-green-100 text-green-800">
                        Activa
                      </span>
                    ) : (
                      <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-600">
                        Finalizada
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                    <div class="flex gap-2 justify-end">
                      <a 
                        href={`/votaciones/${sesion.id}`}
                        class="inline-block px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded transition-colors"
                      >
                        Ver
                      </a>
                      {sesion.url_votaciones && (
                        <a 
                          href={sesion.url_votaciones}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-block px-3 py-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded transition-colors"
                          title="Ver en sitio del Congreso"
                        >
                          ‚Üí
                        </a>
                      )}
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    )}

    <footer class="text-center mt-16 text-gray-600">
      <p>&copy; {new Date().getFullYear()} Congreso de la Rep√∫blica de Guatemala</p>
    </footer>
  </main>
</AuthenticatedLayout>
